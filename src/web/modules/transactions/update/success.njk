{% extends "layout/layout.njk" %}

{% block main %}
<div class="govuk-panel govuk-panel--confirmation">
	<h1 class="govuk-panel__title">
		Transaction update job started
	</h1>
	<div class="govuk-panel__body">
		Your job reference
		<br>
		<p class="govuk-!-font-size-24"> <strong>{{ jobId }}</strong></p>
	</div>
</div>

<p class="govuk-body">
