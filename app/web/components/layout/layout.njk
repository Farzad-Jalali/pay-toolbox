<header class="govuk-header " role="banner" data-module="header">
  <div class="govuk-header__container govuk-width-container">
		<div class="govuk-header__content">
      <a href="/" class="govuk-header__link govuk-header__link--service-name">
      	GOV.UK Pay Toolbox
      </a>

    </div>
  </div>
</header>



    <!-- /div>
  </div-->
  <div class="govuk-width-container">
		{{
			govukPhaseBanner({
				tag: { text: 'alpha' },
				html: 'This tool is in active development. It should not be used in production.'
			})
		}}

    <div class="govuk-main-wrapper govuk-!-padding-top-4">
      <!-- @TODO(sfount) move to header njk -->

      <div class="govuk-grid-row">

        <!-- @TODO(sfount) temporary application structure pending design -->
        <!-- @FIXME(sfount) revise - application navigation -->
        <!-- @TODO(sfount) consider performance with side nav - it could be prebaked -->
        <!-- @FIXME(sfount) > 100 ms performance concerns - could just be laptop battery -->
        <!-- note a lot of these performance issues are from receiving error codes from non-connected services -->

        <div class="govuk-grid-column-one-quarter">
          <h4 class="govuk-heading-s app-subnav__header">Statistics</h4>
          <!-- @TODO(sfount) move links etc. into small templates/ macros - make use of govuk front end utilites as much as possible -->
          <ul class="govuk-list app-subnav__section">
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/statistics">Overview</a>
            </li>
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/statistics/filter/date">For a given day</a>
            </li>
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/statistics/compare/date">Compare two days</a>
            </li>
            <li class="app-subnav__section-item">
              <!-- a class="app-subnav__link govuk-link govuk-link\-\-no-visited-state" href="/statistics/services">For a service</a -->
              <span class="app-subnav__link"><s>For a service</s></span>
            </li>
          </ul>

          <h4 class="govuk-heading-s app-subnav__header">Gateway Accounts</h4>
          <ul class="govuk-list app-subnav__section">
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/gateway_accounts">Overview</a>
            </li>
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/gateway_accounts/create">Create new account</a>
            </li>
          </ul>
        
          <h4 class="govuk-heading-s app-subnav__header">Services</h4>
          <ul class="govuk-list app-subnav__section">
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/services">Overview</a>
            </li>
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/services/search">Find a service</a>
            </li>
          </ul>
        
          <h4 class="govuk-heading-s app-subnav__header">Transactions</h4>
          <ul class="govuk-list app-subnav__section">
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/transactions/search">Find a transaction</a>
            </li>
          </ul>

          <h4 class="govuk-heading-s app-subnav__header">Stripe</h4>
          <ul class="govuk-list app-subnav__section">
            <li class="app-subnav__section-item">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/stripe/create">Create new account</a>
            </li>
          </ul>
        </div>

        <div class="govuk-grid-column-three-quarters">
          {% block main %}
          {% endblock %}
        </div>
      </div>
    </div>

    <!-- div class="govuk-phase-banner">
