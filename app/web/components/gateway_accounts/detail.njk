{% from "components/table/macro.njk" import govukTable %}
{% extends "layout/layout.njk" %} 

{% block main %}
  
  <h1>Gateway Account Details</h1>

  <!-- actions -->
  <div>
    <a href="/gateway_accounts/{{ account.gateway_account_id }}/api_keys">API Keys</a>
    <!-- button>Payment Links</button -->
  </div>

  {{ govukTable({
    caption: "Account Details",
    firstCellIsHeader: true,
    rows: [
    [ { text: 'Gateway Account ID' }, { text: account.gateway_account_id } ],
    [ { text: 'Type' }, { text: account.type.toUpperCase() } ],
    [ { text: 'Description' }, { text: account.description } ],
    [ { text: 'Provider' }, { text: account.payment_provider } ],
    [ { text: 'Service' }, { text: account.service_name } ],
    [ { text: 'Analytics' }, { text: account.analytics_id } ]
    ]
  })
  }}

  <div>
    <pre><code>{{ account | dump | safe }}</code></pre>
    <pre><code>{{ services | dump | safe }}</code></pre>
  </div>
{% endblock %}
