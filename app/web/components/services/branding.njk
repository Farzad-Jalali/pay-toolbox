{% from "components/input/macro.njk" import govukInput %}
{% extends "layout/layout.njk" %} 

{% block main %}
  <h1>Update Custom Branding</h1>

  <!-- @TODO(sfount) provide uniform context for all editing/ detail pages showing which entity is being dealt with -->
  <p>Note this is for service {{ service.name }} ({{ serviceId }})</p>
  
  <form method="POST" action="/services/{{ serviceId }}/branding">
    {{ govukInput({ 
      id: "image_url",
      name: "image_url",
      value: service.custom_branding and service.custom_branding.image_url,
      label: { text: "Image URL" }
      })
      }}
    
    {{ govukInput({ 
      id: "css_url",
      name: "css_url",
      value: service.custom_branding and service.custom_branding.css_url,
      label: { text: "CSS URL" }
      })
      }}

    <button type="submit">Submit</button>
  </form>

{% endblock %}
